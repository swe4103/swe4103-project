{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended" // Ensures Prettier formatting takes precedence
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true,
        "arrowParens": "always"
      }
    ],
    "arrow-parens": ["error", "always"],
    "prefer-arrow-callback": "error",
    "no-var": "error",
    "no-console": "off",
    "quotes": ["error", "single"],
    "arrow-body-style": ["error", "as-needed"]
  }
}
